<div class="wrapper">
  <h1 class="title">Edit Account</h1>

  <form class="main-form" action="/edit-user" method="post">
    <div class="info-form">
      <input  value="$currentUser.getId()" type="hidden" name="userId" id="userId">
      <label for="username">Username</label>
      <input class="lavender-field" required value="$user.getUserName()" type="text" class="form-control" name="username" id="username">
      <label for="password">Password</label>
      <input class="maroon-field" required value="$currentUser.getPassword()" type="password" class="form-control" name="password" id="password">
      <button class="blue-button button" type="submit" class="btn btn-info">Save</button>
    </div>
  </form>
</div>
